<h1>Books</h1>

<% @books.each do |book| %>

  <h4>Title</h4>
  <span><%= book.title %></span>
  <h4>Body</h4>
  <span><%= book.body %></span>
  <span>
  <%= link_to 'Show', book_path(book.id) %>
  <%= link_to "Edit", edit_book_path(book.id) %>
  </span>
<% end %>

<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
